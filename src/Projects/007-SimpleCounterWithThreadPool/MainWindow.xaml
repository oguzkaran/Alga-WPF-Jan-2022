<Window x:Class="SimpleCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleCounter"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label x:Name="m_labelCounter" VerticalAlignment="Center"/>
        <Button Content="Start" Click="Button_Click"/>
        <Button Content="Stop" Click="Button_Click_1"/>
    </StackPanel>
</Window>
