<Window x:Class="SampleUIApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleUIApplication"
        mc:Ignorable="d"
        Title="Sample Application" Height="200" Width="250" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="m_textBoxMessage" x:FieldModifier="private" HorizontalAlignment="Left" Margin="70,44,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="m_buttonOK" x:FieldModifier="private" Click="onOKButtonClick" Content="OK" HorizontalAlignment="Left" Height="22" Margin="70,92,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="m_buttonExit" x:FieldModifier="private" Content="Exit" HorizontalAlignment="Left" Height="22" Margin="70,130,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
